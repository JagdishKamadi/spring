<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <bean id="twitterServiceBean" class="com.epam.service.TwitterService"/>
    <bean id="whatsAppServiceBean" class="com.epam.service.WhatsAppService"/>

    <!--    constructor based injection -->
    <bean id="messageProcessorImplBean" class="com.epam.service.MessageProcessorImpl">
        <constructor-arg index="0" ref="twitterServiceBean"/>
        <constructor-arg index="1" ref="whatsAppServiceBean"/>
        <!--    setter based injection -->
        <property name="messageServiceBeanUsingTwitterServiceImplementation" ref="twitterServiceBean"/>
    </bean>

    <bean id="messageSecurityServiceImplBean" class="com.epam.service.MessageSecurityServiceImpl">
        <constructor-arg index="0" ref="messageProcessorImplBean"/>
    </bean>

</beans>